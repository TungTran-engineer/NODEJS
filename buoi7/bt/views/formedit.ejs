<%- include('layouts/header.ejs'); %>

<main>
    <form action="/users/update/<%= user._id %>" method="POST">
        <input type="hidden" name="_method" value="PUT">  <!-- Override method to PUT -->

        <!-- Email input -->
        <div class="mb-3">
          <label for="emailInput" class="form-label">Email address</label>
          <input type="email" class="form-control" id="emailInput" name="email" value="<%= user.email %>" required>
        </div>

        <!-- Name input -->
        <div class="mb-3">
          <label for="nameInput" class="form-label">Name</label>
          <input type="text" class="form-control" id="nameInput" name="name" value="<%= user.name %>" required>
        </div>

        <!-- Age input -->
        <div class="mb-3">
          <label for="ageInput" class="form-label">Age</label>
          <input type="number" class="form-control" id="ageInput" name="age" value="<%= user.age %>" min="0" required>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</main>

<%- include('layouts/footer.ejs'); %>
